<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.MainActivity">

    <TextView
        android:id="@+id/game_announce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageButton
            android:id="@+id/die_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/white1"
            android:layout_margin="8dp"
             />

        <ImageButton
            android:id="@+id/die_two"
            app:layout_constraintStart_toEndOf="@+id/die_one"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/white2"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/die_three"
            app:layout_constraintStart_toEndOf="@+id/die_two"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/white3"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageButton
            android:id="@+id/die_four"
            app:layout_constraintTop_toBottomOf="@id/die_one"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/white4"
             />

        <ImageButton
            android:id="@+id/die_five"
            app:layout_constraintTop_toBottomOf="@id/die_two"
            app:layout_constraintStart_toEndOf="@id/die_four"
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/white5"
            />

        <ImageButton
            android:id="@+id/die_six"
            app:layout_constraintTop_toBottomOf="@id/die_three"
            app:layout_constraintStart_toEndOf="@id/die_five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@drawable/white6"
             />

        <Button
            android:id="@+id/throw_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/throw_button"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Spinner
            android:id="@+id/dice_combo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>